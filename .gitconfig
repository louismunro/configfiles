[user]
	name = Louis Munro
	email = louis.munro@shopify.com
    # you should configure this manually... 

[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    lg = log -p
    who = shortlog -s --
    gpr = push -u origin HEAD
[init]
	templatedir = ~/.git_template
[core]
	pager = 
	editor = nvim
	excludesfile = /Users/lmunro/.gitignore
[diff]
	algorithm = patience
[protocol]
	version = 2
[credential]
	helper = osxkeychain
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
