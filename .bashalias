# ALIASES
alias pu="pushd"
alias po="popd"
alias rm="rm -i"
alias l="ls -hFG"
alias ll="ls -lhFG"
alias la="ls -alhFG"
alias addalias="$EDITOR ~/.bashalias; source ~/.bashalias"
alias addfunc="$EDITOR ~/.bashfunc; source ~/.bashfunc"
alias addlocal="$EDITOR ~/.bashlocal; source ~/.bashlocal"
alias k=kubectl
alias kdesc="kubectl describe"
alias v=vim
alias g=git
alias vg='vagrant'
alias flushdns='sudo dscacheutil -flushcache; sudo killall -HUP mDNSResponder'
alias kstatus='kubectl get componentstatuses'
alias tf=terraform
alias kpods='kubectl get pods --all-namespaces -owide'
alias kc="kubectl config use-context"
alias kx=kubectx
alias kn=kubens
alias knodes="kubectl get nodes -owide"
alias ltr='ls -ltrh'
# enable completion for "k" in addition to kubectl
complete -o default -o nospace -F __start_kubectl k
# weather!
alias wtr='curl http://wttr.in/montreal'
